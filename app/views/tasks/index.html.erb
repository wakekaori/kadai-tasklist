<% if logged_in? %>
  <h1>タスク一覧</h1>
  
    <% if @tasks.any? %>
      <ul>
        <% @tasks.each do |task| %>
          <li>
            <%= link_to task.id, task %> : <%= task.status %> &gt; <%= task.content %>
          </li>
        <% end %>
      </ul>
    <% end %>
    
    <%= link_to "新規タスクの登録", new_task_path %>
<% end %>